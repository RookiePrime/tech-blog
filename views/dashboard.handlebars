<section class="dashboard">
    <p>Have something to say about tech? <a href="/dashboard/create-post">Click here!</a></p>
</section>
{{#if posts.length}}
<section class="dashboard">
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="dashboard/edit/{{id}}" class="edit-link">Edit or Delete Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}